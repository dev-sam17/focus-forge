{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "outDir": "../../dist/electron",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../*"]
    },
    "types": ["electron", "node"],
    "typeRoots": ["../../types", "../../node_modules/@types"]
  },
  "include": ["./**/*.ts", "./**/*.cts"],
  "exclude": ["../../node_modules"]
}
